<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainImgParent"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/above_lot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/itemImg4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/itemImgEx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_lot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:src="@drawable/ic_back"
        android:visibility="visible">

        <ImageView
            android:id="@+id/itemImg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/itemImg2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

        <!--
        <cuban.social.testnetwork.view.VideoThumb
            android:id="@+id/itemImg3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/vidthumb"
            android:visibility="visible" />
            -->

        <RelativeLayout
            android:id="@+id/itemImg3Wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="visible">

            <VideoView
                android:id="@+id/itemImg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/itemImg3Play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_play"
                android:layout_centerInParent="true"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/itemImg3Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>