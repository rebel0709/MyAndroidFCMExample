<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blogs_list_row_selector"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Thumbnail Image -->
    <LinearLayout
        android:id="@+id/leftItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="90sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/left_fromUser"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="10dp"
                android:minHeight="16dp"
                android:minWidth="16dp"
                android:src="@drawable/profile_default_photo"
                app:border="true"
                app:border_color="@color/avatar_border"
                app:border_width="1dp"
                app:shadow="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <cuban.social.testnetwork.view.ResizableImageView
                        android:id="@+id/left_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="480dp"
                        android:src="@drawable/img_loading" />

                    <github.ankushsachdeva.emojicon.EmojiconTextView
                        android:id="@+id/left_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/chat_left_item"
                        android:singleLine="false"
                        android:text="Example message"
                        android:textColor="#2B3135"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        emojicon:emojiconSize="24dp" />

                    <RelativeLayout
                        android:id="@+id/chatLeftLayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone">

                        <cuban.social.testnetwork.view.ResizableImageView
                            android:id="@+id/resizeLeftChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="600dp" />

                        <ImageView
                            android:id="@+id/imageViewLeftChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/youtube_logo" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/chatLeftwebsiteLayout"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <cuban.social.testnetwork.view.ResizableImageView
                                android:id="@+id/chatLeftWebsiteImage"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/img_loading" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/website_image_shado"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:paddingBottom="5dp">
                            `

                            <TextView
                                android:id="@+id/chatLeftwebsiteTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/chatLeftWebsiteUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!--<TextView
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="52dp">

            <TextView
                android:id="@+id/left_timeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:text="4m ago"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <cuban.social.testnetwork.view.ResizableImageView
                        android:id="@+id/right_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="480dp"
                        android:src="@drawable/img_loading" />

                    <github.ankushsachdeva.emojicon.EmojiconTextView
                        android:id="@+id/right_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/chat_right_item"
                        android:singleLine="false"
                        android:text="Example message"
                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        emojicon:emojiconSize="24dp" />

                    <RelativeLayout
                        android:id="@+id/chatRightLayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone">

                        <cuban.social.testnetwork.view.ResizableImageView
                            android:id="@+id/resizeRightChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="10dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="600dp" />

                        <ImageView
                            android:id="@+id/imageViewRightChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/youtube_logo" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/chatRightWebsiteLayout"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <cuban.social.testnetwork.view.ResizableImageView
                                android:id="@+id/chatRifhtWebsiteImage"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/img_loading" />

                            <View
                                android:visibility="gone"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/website_image_shado" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:paddingBottom="5dp">
                            `

                            <TextView
                                android:id="@+id/chatRightWebsiteTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/chatRightWebsiteUrl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <com.pkmmte.view.CircularImageView
                android:id="@+id/right_fromUser"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:minHeight="16dp"
                android:minWidth="16dp"
                android:src="@drawable/profile_default_photo"
                app:border="true"
                app:border_color="@color/avatar_border"
                app:border_width="1dp"
                app:shadow="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_timeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:text="4m ago"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Person Full name -->

    <!-- Status -->

</LinearLayout>