<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blogs_list_row_selector"
    android:orientation="vertical">

    <!-- Thumbnail Image -->
    <LinearLayout
        android:id="@+id/postTopSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/postSeparatorLine"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/postHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/itemAuthorPhoto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile_default_photo"
            app:border="true"
            app:border_color="@color/content_page"
            app:border_width="1dp"
            app:shadow="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/profile_verify_icon"
                        android:fontFamily="sans-serif-light"
                        android:singleLine="true"
                        android:text="Item Author Fullname"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:singleLine="true"
                        android:text="\@username"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemTimeAgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="1m ago"
                            android:textColor="#096482"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="-"
                            android:textColor="@color/gray_text"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/itemMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="05.05.1955"
                            android:textColor="#096482"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/locationContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="-"
                                android:textColor="@color/gray_text"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itemCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="City"
                                android:textColor="#096482"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/itemCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Country"
                                android:textColor="#096482"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewShare"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/itemAction"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:minHeight="24dp"
                    android:minWidth="24dp"
                    android:src="@drawable/ic_action_remove" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cuban.social.testnetwork.view.ResizableImageView
            android:id="@+id/itemImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:maxHeight="600dp"
            android:src="@drawable/img_loading" />

        <github.ankushsachdeva.emojicon.EmojiconTextView
            android:id="@+id/itemPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:autoLink="web"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Item Text"
            android:textColor="@color/black"
            android:textColorLink="#5BCFF2"
            android:textSize="16dp"
            emojicon:emojiconSize="24dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/galleryTvMore"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ContiuneReading"/>

        <RelativeLayout
            android:id="@+id/relativeGalleryLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone">

            <cuban.social.testnetwork.view.ResizableImageView
                android:id="@+id/resizeImageviewGalleryYoube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:maxHeight="600dp" />

            <ImageView
                android:id="@+id/imageviewGalleryYoutubePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/youtube_logo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/galerympegvideolayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible">

            <cuban.social.testnetwork.view.ResizableImageView
                android:id="@+id/galeryimageviewmpegvideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/vidthumb"
                android:adjustViewBounds="true"
                android:maxHeight="600dp" />

            <ImageView
                android:id="@+id/galeryimageviewmpegvideoplay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/galleryWebsiteLayout"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <cuban.social.testnetwork.view.ResizableImageView
                    android:id="@+id/galleryWebsiteImage"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/img_loading" />

                <View
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/website_image_shado" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:paddingBottom="5dp">
                `

                <TextView
                    android:id="@+id/galleryWebsiteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/galleryWebsiteUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/listViewDivider2"
            android:orientation="vertical" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/galleryCommentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemComment"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/itemCommentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Comment" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/galleryLIkeLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemLikesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/itemLike"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/perk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="@string/like" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/postBottomSeparatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/postSeparatorLine"
        android:orientation="vertical" />

    <!-- Person Full name -->

    <!-- Status -->

</LinearLayout>